        "name": "CreateStopVMWebhook",
        "version": "1.0.0.0",
        "description": "",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/Snooze/Bootstrap/CreateStopVMWebhook.ps1', parameters('_artifactsLocationSasToken'))]"
      },      
      "CreateScheduleforAlert": {
        "name": "CreateScheduleforAlert",
        "version": "1.0.0.0",
        "description": "",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/Snooze/Bootstrap/CreateScheduleforAlert.ps1', parameters('_artifactsLocationSasToken'))]"
      },
