        "name": "DeleteResourceGroups",
        "version": "1.0.0.0",
        "description": "This runbook will delete resource groups",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/DeleteRG.ps1', parameters('_artifactsLocationSasToken'))]"
      }
