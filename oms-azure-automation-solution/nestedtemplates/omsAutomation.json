    "runbooks": {
      "boot": {
        "name":"bootstrap",
        "version": "1.0.0.0",
        "description": "Configurates Azure Automation account for anything we can't handle in ARM",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/master.ps1', parameters('_artifactsLocationSasToken'))]"
      },
      "createAlertforv2VM": {
        "name": "CreateAlertsForAzureRmVM",
        "version": "1.0.0.0",
        "description": "Runbook to set low CPU alert rule thresholds on ARM VMs across a subscription or resource group(s)",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/Snooze/CreateAlertsForAzureRmVM.ps1', parameters('_artifactsLocationSasToken'))]"
      },
      "StopAzureRmVM": {
        "name": "StopAzureRmVM",
        "version": "1.0.0.0",
        "description": "Runbook to stop indivual ARM VM, called by CreateAlertsForAzureRmVM",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/Snooze/StopAzureRmVM.ps1', parameters('_artifactsLocationSasToken'))]"
      },      
      "NewRunAsAccountCertKeyVault": {
        "name": "NewRunAsAccountCertKeyVault",
        "version": "1.0.0.0",
        "description": "",
        "type": "PowerShell",
        "Id": "",
        "scriptUri": "[concat(parameters('_artifactsLocation'),'/scripts/Snooze/Bootstrap/NewRunAsAccountCertKeyVault.ps1', parameters('_artifactsLocationSasToken'))]"
      },      
